{
  "scripts": {
    "options": [
      "BRANCH=nw61",
      "TAG=nw-v0.61.0",
      "SDK=true",
      "SDKN=1",
      "PKG=nwjs-sdk",
      [
        "BUILD_ARGS=(",
        "  is_debug=false",
        "  is_component_ffmpeg=true",
        "  target_cpu='\"arm64\"'",
        "  symbol_level=1",
        "  proprietary_codecs=true",
        "  ffmpeg_branding='\"Chromium\"'",
        "  enable_stripping=true",
        "  enable_dsyms=true",
        "  enable_precompiled_headers=false",
        "  nwjs_sdk=$SDK",
        ")"
      ],
      [
        "GYP_ARGS=(",
        "  target_arch=arm64",
        "  building_nw=1",
        "  nwjs_sdk=$SDKN",
        "  disable_nacl=0",
        "  mac_breakpad=1",
        "  buildtype=Official",
        ")"
      ]
    ],
    "depot": [
      {
        "_": "git clone https://chromium.googlesource.com/chromium/tools/depot_tools.git",
        "fail": "continue"
      },
      "PATH=\"$PATH:$PWD/depot_tools\""
    ],
    "download": [
      "gclient config --name=src https://github.com/nwjs/chromium.src.git@origin/$BRANCH",
      [
        "sed -i.bak 's@\\(\"custom_deps\".*{\\)@\\1",
        "    \"src/third_party/WebKit/LayoutTests\": None,",
        "    \"src/chrome_frame/tools/test/reference_build/chrome\": None,",
        "    \"src/chrome_frame/tools/test/reference_build/chrome_win\": None,",
        "    \"src/chrome/tools/test/reference_build/chrome\": None,",
        "    \"src/chrome/tools/test/reference_build/chrome_linux\": None,",
        "    \"src/chrome/tools/test/reference_build/chrome_mac\": None,",
        "    \"src/chrome/tools/test/reference_build/chrome_win\": None,@' ",
        "    .gclient"
      ],
      {
        "_": "git clone --depth=1 -b $TAG https://github.com/nwjs/nw.js src/content/nw",
        "fail" : "continue"
      },
      {
        "_": "git clone --depth=1 -b $BRANCH https://github.com/nwjs/node src/third_party/node-nw",
        "fail" : "continue"
      },
      {
        "_": "git clone --depth=1 -b $BRANCH https://github.com/nwjs/v8 src/v8",
        "fail" : "continue"
      },
      "gclient sync --with_branch_heads"
    ],
    "configure": [
        "cd src",
        "gn gen out/nw \"--args=$BUILD_ARGS\"",

        "# - fix python version",
        "sed -i.bak 's/(python /(python2 /' third_party/node-nw/common.gypi",
        "sed -i.bak 's/ python$/ python2/' tools/gyp/pylib/gyp/mac_tool.py",

        "GYP_DEFINES=\"$GYP_ARGS\"",

        [
          "GYP_CHROMIUM_NO_ACTION=0 python2 ./build/gyp_chromium",
          "   -I third_party/node-nw/common.gypi -D building_nw=1",
          "    -D clang=1 third_party/node-nw/node.gyp"
        ]
    ],
    "build": [
      "cd src",
      "# Chromium",
      "ninja -C out/nw nwjs",
      "# Node",
      "ninja -C out/Release node",
      "ninja -C out/nw copy_node"
    ],
    "package": [
      [
        "gcc -x c - <<",
        "#include <stdio.h>",
        "#include \"src/content/nw/src/nw_version.h\"",
        "int main() {",
        "  puts(NW_VERSION_STRING);",
        "  return 0;",
        "}"
      ],
      "V=$(./a.out)",
      "tar Jcf $PKG-$V-osx-arm64.tar.xz --strip-components=3 src/out/nw/nwjs.app"
    ],
    "dist": [
      "cd src",
      "ninja -C out/nw nwjc payload chromedriver",
      "touch out/nw/nwjs.breakpad.tar",
      "touch out/nw/v8_context_snapshot.x86_64.bin",
      "ninja -C out/nw dist",
      "mv out/nw/dist ."
    ]
  },
  "optional-scripts": {
    "clean": [
      "rm -rf src/out"
    ],
    "ffmpeg": [
      [
        "BUILD_ARGS=(",
        "  is_debug=false",
        "  is_component_ffmpeg=true",
        "  target_cpu='\"arm64\"'",
        "  symbol_level=1",
        "  proprietary_codecs=true",
        "  ffmpeg_branding='\"Chrome\"'",
        "  enable_stripping=true",
        "  enable_dsyms=true",
        "  enable_precompiled_headers=false",
        ")"
      ],
      "cd src",
      "gn gen out/nw \"--args=$BUILD_ARGS\"",
      "ninja -C out/nw libffmpeg.dylib",
      "V=$(../a.out)",
      "tar Jcf ../nwjs-$V-ffmpeg-osx-arm64.tar.gz out/nw/libffmpeg.dylib"
    ]
  }
}
